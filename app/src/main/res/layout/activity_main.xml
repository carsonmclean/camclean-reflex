<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reaction Timer Game"
        android:id="@+id/button2"
        android:onClick="startReactionTimer"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="75dp"
        android:background="@color/button"
        android:height="60dp"
        android:textColor="@color/text"
        android:textSize="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 Player Gameshow Buzzer"
        android:id="@+id/button3"
        android:onClick="startTwoPlayer"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="75dp"
        android:background="@color/button"
        android:height="60dp"
        android:textColor="@color/text"
        android:textSize="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 Player Gameshow Buzzer"
        android:id="@+id/button4"
        android:onClick="startThreePlayer"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="75dp"
        android:background="@color/button"
        android:height="60dp"
        android:textColor="@color/text"
        android:textSize="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 Player Gameshow Buzzer"
        android:id="@+id/button5"
        android:onClick="startFourPlayer"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="75dp"
        android:background="@color/button"
        android:height="60dp"
        android:textColor="@color/text"
        android:textSize="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:id="@+id/button6"
        android:onClick="startReactionTimer"
        android:layout_alignParentTop="true"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="75dp"
        android:background="@color/button"
        android:height="60dp"
        android:textColor="@color/text"
        android:textSize="16dp" />

    <!-- TODO: Get source for PNGs-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/button2"
        android:src="@drawable/timer"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/x"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/x"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/x"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/bar"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentStart="true" />
</RelativeLayout>
